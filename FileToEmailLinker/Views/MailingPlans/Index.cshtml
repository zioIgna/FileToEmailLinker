@model IEnumerable<FileToEmailLinker.Models.Entities.MailingPlan>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex">
    <h1>Pianificazioni</h1>
    <span class="align-self-center ms-auto">
        <a asp-action="Create" class="btn btn-outline-primary">Aggiungi <i class="bi bi-plus-circle"></i></a>
    </span>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Stato
            </th>
            <th>
                Soggetto email
            </th>
            <th>
                Schedulazione
            </th>
            <th>
                Orario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveState)
            </td>
            <td class="text-break">
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @if (item.WeeklySchedulation != null)
                {
                    <span>Settimanale</span>
                }
                else
                {
                    <span>Mensile</span>
                }
            </td>
            <td>
                <span>@item.Schedulation.Time</span>
            </td>
            <td style="white-space:nowrap">
                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-file-text"></i></a> |
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" style="color:red"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
