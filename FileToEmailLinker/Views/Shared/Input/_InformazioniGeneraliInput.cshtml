@model FileToEmailLinker.Models.InputModels.MailPlans.MailPlanInputModel

<div class="card bg-light mb-2">
    <div class="card-header fw-bold">Informazioni generali</div>
    <div class="card-body">
        <div class="row row-cols-md-2 mb-1">
            <div class="col-6">
                <div class="row row-cols-2">
                    <div class="col-8">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Nome programmazione</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4 d-flex">
                        <div class="form-check form-switch align-self-end">
                            <label asp-for="ActiveState" class="form-check-label">Attivo</label>
                            <input class="form-check-input" type="checkbox" asp-for="ActiveState" checked />
                            <span asp-validation-for="ActiveState" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group mt-2">
                            <label asp-for="Subject" class="control-label">Soggetto email</label>
                            <input type="text" asp-for="Subject" class="form-control" />
                            <span asp-asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Text" class="control-label">Testo email</label>
                    <textarea rows="4" asp-for="Text" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row row-cols-md-3 mt-2">
            <div class="col form-group">
                <label asp-for="SchedTime" class="control-label">Orario invio</label>
                <input asp-for="SchedTime" class="form-control" type="time" />
                <span asp-validation-for="SchedTime" class="text-danger"></span>
            </div>
            <div class="col form-group">
                <label asp-for="StartDate" class="control-label">Inizio pianificazione</label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col form-group">
                <label asp-for="EndDate" class="control-label">Fine pianificazione</label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>