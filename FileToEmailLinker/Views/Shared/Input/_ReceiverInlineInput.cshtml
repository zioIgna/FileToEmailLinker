@model Receiver
@{
    var receiverVcId = "receiver_" + Model.Id;
    var hashedReceiverVcId = "#receiver_" + Model.Id;
    var formId = "form_" + Model.Id;
}

<input asp-for="Id" hidden form="@formId" />
<td class="form-group">
    <input asp-for="Name" class="form-control" form="@formId"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</td>
<td class="form-group">
    <input asp-for="Surname" class="form-control" form="@formId"/>
    <span asp-validation-for="Surname" class="text-danger"></span>
</td>
<td class="form-group">
    <input asp-for="Email" class="form-control" form="@formId"/>
    <span asp-validation-for="Email" class="text-danger"></span>
</td>
<td>
    <input type="submit" value="Save" data-recId="@hashedReceiverVcId" form="@formId"/> |
    <a asp-action="InlineOutput" asp-route-id="@Model.Id" data-ajax="true" data-ajax-mode="replace" data-ajax-update="@hashedReceiverVcId">Annulla</a>
</td>

