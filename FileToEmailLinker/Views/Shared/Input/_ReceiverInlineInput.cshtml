@model Receiver
@{
    var receiverVcId = "receiver_" + Model.Id;
    var hashedReceiverVcId = "#receiver_" + Model.Id;
    var formId = "form_" + Model.Id;
}

<input asp-for="Id" hidden form="@formId" />
<td class="form-group">
    <input asp-for="Name" class="form-control" form="@formId"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</td>
<td class="form-group">
    <input asp-for="Surname" class="form-control" form="@formId"/>
    <span asp-validation-for="Surname" class="text-danger"></span>
</td>
<td class="form-group">
    <input asp-for="Email" class="form-control" form="@formId"/>
    <span asp-validation-for="Email" class="text-danger"></span>
</td>
<td>
    <button type="submit" class="btn btn-outline-primary" data-recId="@hashedReceiverVcId" form="@formId"><i class="bi bi-check-circle"></i></button>
    <a asp-action="InlineOutput" class="btn btn-outline-secondary" asp-route-id="@Model.Id" data-ajax="true" data-ajax-mode="replace" data-ajax-update="@hashedReceiverVcId"><i class="bi bi-x-circle"></i></a>
</td>

