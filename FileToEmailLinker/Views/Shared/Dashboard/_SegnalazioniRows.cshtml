@model ICollection<Alert>

@foreach (var segnalazione in Model)
{
    <tr>
        <td>@segnalazione.Message</td>
        <td>@segnalazione.DateTime</td>
        <td>@segnalazione.AlertSeverity</td>
        <td>
            <a asp-action="CheckAlertAndReload" 
                asp-route-id="@segnalazione.Id" 
                data-ajax="true" 
                data-ajax-mode="replace" 
                data-ajax-update="#allSegnalazioniTables"><i class="bi bi-check-circle"></i></a>
        </td>
    </tr>
}